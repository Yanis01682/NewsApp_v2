<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <!--
              最终版微调 v3:
              - left/right: 减小到 40dp, 长度稍稍增加.
              - top: 减小到 4dp, 顶部再往上.
              - bottom: 减小到 22dp, 底部再往下, 整体厚度增加.
            -->
            <item
                android:left="40dp"
                android:right="40dp"
                android:top="4dp"
                android:bottom="22dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/sky_blue_500" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:drawable="@android:color/transparent" />
</selector>
